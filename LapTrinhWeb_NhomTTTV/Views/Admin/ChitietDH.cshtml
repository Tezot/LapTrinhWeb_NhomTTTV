@model LapTrinhWeb_NhomTTTV.Models.Donhang
@{
    ViewBag.Title = "ChitietDH";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<hr />
<h2 style="text-align: center;">THÔNG TIN CHI TIẾT ĐƠN HÀNG</h2>

<div style="text-align:justify">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Ngày đặt
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ngaydat)
        </dd>

        <dt>
            Ngày giao
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ngaygiao)
        </dd>

        <dt>
            Tình trạng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tinhtrang)
        </dd>

        <dt>
            Tên người đặt
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nguoidung.Hoten)
        </dd>

        <dt>
            Điện thoại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nguoidung.Dienthoai)
        </dd>

        <dt>
            Địa chỉ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nguoidung.Diachi)
        </dd>

        @*<dt>
                Tổng tiền
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Chitietdonhangs.Tha)
            </dd>*@
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <div class="return">
                <a href="@Url.Action("Suadonhang", "Admin", new { id = Model.Madon })" style="text-decoration:none; color:black">Chỉnh sửa</a>
            </div>
            <div class="return">
                <a href="@Url.Action("DSdonhang", "Admin")" style="text-decoration:none; color:black">Quay lại</a>
            </div>
        </div>
    }
</div>
