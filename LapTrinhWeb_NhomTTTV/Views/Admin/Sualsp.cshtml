@model LapTrinhWeb_NhomTTTV.Models.Loaisp

@{
    ViewBag.Title = "Sualsp";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@using (Html.BeginForm("Sualsp", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Sửa loại sản phẩm</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Maloaisp)

        <div class="form-group">
            Tên loại sản phẩm
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tenloaisp, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tenloaisp, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-success" />
            </div>
        </div>
        <div class="form-group">
            <div class="btn btn-primary">
                <a href="@Url.Action("DSloaisp", "Admin")" style="text-decoration:none; color:black">Quay lại</a>
            </div>
        </div>
    </div>
}

