@model LapTrinhWeb_NhomTTTV.Models.Sanpham

@{
    ViewBag.Title = "Themmoisanpham";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Themmoisanpham", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Thêm mới sản phẩm</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label>Tên Sản Phẩm</label>
            <div class="col-md-10">
                <input required type="text" name="Ten" placeholder="Tên Sản Phẩm..." style="border-radius: 12px"/>
            </div>
        </div>

        <div class="form-group">
            <label>Giá tiền</label>
            <div class="col-md-10">
                <input required type="text" name="Gia" placeholder="Giá..." style="border-radius: 12px"/>
            </div>
        </div>

        <div class="form-group">
            <label>Số lượng</label>
            <div class="col-md-10">
                <input required type="text" name="SoLuong" placeholder="Số lượng..." style="border-radius: 12px"/>
            </div>
        </div>

        <div class="form-group">
            <label>Mô tả</label>
            <div class="col-md-10">     
                <textarea required class="textarea" name="textarea" placeholder="Mô tả thông tin sách" style="width: 500px; height: 150px; border-radius: 12px"></textarea>
            </div>
        </div>

        <div class="form-group">
            <label>Hình</label>
            <div class="col-md-10">
                <input type="file" name="fileupload" required/>
                @ViewBag.Thongbao
            </div>
        </div>

        <div class="form-group">
            <label>Loại sản phẩm</label>
            <div class="col-md-10">
                @Html.DropDownList("Maloaisp")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm mới" class="btn btn-success" />
            </div>
        </div>

        <div class="form-group">
            <div class="btn btn-primary">
                <a href="@Url.Action("Sanpham", "Admin")" style="text-decoration:none; color:black">Quay lại</a>
            </div>
        </div>
    </div>
}
