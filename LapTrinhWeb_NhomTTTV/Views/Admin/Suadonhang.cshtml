@model LapTrinhWeb_NhomTTTV.Models.Donhang

@{
    ViewBag.Title = "Suadonhang";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Suadonhang", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Sửa thông tin đơn hàng</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Madon)

        <div class="form-group">
            Ngày đặt
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ngaydat, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ngaydat, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Ngày giao
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ngaygiao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ngaygiao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Tình trạng
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tinhtrang, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tinhtrang, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Tên người đặt
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nguoidung.Hoten, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nguoidung.Hoten, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Điện thoại
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nguoidung.Dienthoai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nguoidung.Dienthoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Địa chỉ
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nguoidung.Diachi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nguoidung.Diachi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-success" />
            </div>
        </div>

        <div class="form-group">
            <div class="btn btn-primary">
                <a href="@Url.Action("DSdonhang", "Admin")" style="text-decoration:none; color:black">Quay lại</a>
            </div>
        </div>
    </div>
}

