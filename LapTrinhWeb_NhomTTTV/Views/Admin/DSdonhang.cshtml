@model IEnumerable<LapTrinhWeb_NhomTTTV.Models.Donhang>

@{
    ViewBag.Title = "DSdonhang";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align: center; font-size: 26px;">Quản Lý Đơn Hàng </h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <tr>
        <th>
            Ngày đặt
        </th>
        <th>
            Ngày giao
        </th>
        <th>
            Tình trạng
        </th>
        <th>
            Người đặt
        </th>
        <th>
            Điện thoại
        </th>
        <th>
            Địa chỉ
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Ngaydat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ngaygiao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tinhtrang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nguoidung.Hoten)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nguoidung.Dienthoai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nguoidung.Diachi)
        </td>
        <td>
            <div class="btn btn-success">
                <a href="@Url.Action("Suadonhang", "Admin", new { id = item.Madon })" style="text-decoration:none; color:black">Sửa</a>
            </div>

            <div class="btn btn-success">
                <a href="@Url.Action("ChitietDH", "Admin", new { id = item.Madon })" style="text-decoration:none; color:black">Chi tiết</a>
            </div>

            <div class="btn btn-success">
                <a href="@Url.Action("Xoadonhang", "Admin", new { id = item.Madon })" style="text-decoration:none; color:black">Xoá</a>
            </div>

        </td>
    </tr>
}

</table>
