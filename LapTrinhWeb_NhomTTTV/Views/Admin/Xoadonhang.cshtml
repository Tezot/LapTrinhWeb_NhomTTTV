@model LapTrinhWeb_NhomTTTV.Models.Donhang

@{
    ViewBag.Title = "Xoadonhang";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<hr />
<h2 style="text-align: center;">Thông tin đơn hàng cần xoá</h2>

<h3 style="text-align: center;">Bạn có muốn xoá đơn hàng này không?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            Ngày đặt
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ngaydat)
        </dd>

        <dt>
            Ngày giao
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ngaygiao)
        </dd>

        <dt>
            Tình trạng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tinhtrang)
        </dd>

        <dt>
            Tên người đặt
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nguoidung.Hoten)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Xoá" class="btn btn-success" />
            </div>
        </div>

        <div class="form-group">
            <div class="btn btn-primary">
                <a href="@Url.Action("DSdonhang", "Admin")" style="text-decoration:none; color:black">Quay lại</a>
            </div>
        </div>
    }
</div>
