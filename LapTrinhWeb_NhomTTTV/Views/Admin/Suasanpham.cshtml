@model LapTrinhWeb_NhomTTTV.Models.Sanpham

@{
    ViewBag.Title = "Suasanpham";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Suasanpham", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Sửa thông tin sản phẩm</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Masp)

        <div class="form-group">       
            Tên sản phẩm
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tensp, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tensp, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Giá tiền sản phẩm
            <div class="col-md-10">
                @Html.EditorFor(model => model.Giatien, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Giatien, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Số lượng
            <div class="col-md-10">
                @Html.EditorFor(model => model.Soluong, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Soluong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Mô tả sản phẩm
            <div class="col-md-10">
                @Html.EditorFor(model => model.Mota, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Mota, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Hình
            <div class="col-md-10">
                <input type="file" name="fileupload" />
                <div style="text-align: justify;margin-left:40%"><img style="width:200px" src="~/img/@Model.Anhbia" /></div>
                <input class="tenanh" type="text" readonly name="Anh" value="@Model.Anhbia" />
            </div>
        </div>

        <div class="form-group">
            Loại sản phẩm
            <div class="col-md-10">
                @Html.DropDownList("Maloaisp")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-success" />
            </div>
        </div>
        <div class="form-group">
            <div class="btn btn-primary">
                <a href="@Url.Action("Sanpham", "Admin")" style="text-decoration:none; color:black">Quay lại</a>
            </div>
        </div>
    </div>
}

